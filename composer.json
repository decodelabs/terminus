{
    "name": "decodelabs/terminus",
    "description": "Simple CLI interactions",
    "type": "library",
    "keywords": ["cli", "terminal"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",

        "decodelabs/coercion": "^0.2",
        "decodelabs/deliverance": "^0.2",
        "decodelabs/exceptional": "^0.4",
        "decodelabs/glitch-support": "^0.4",
        "decodelabs/systemic": "^0.9",
        "decodelabs/veneer": "^0.9",

        "psr/log": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Terminus\\": "src/Terminus"
        },
        "files": [
            "src/global.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.8.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "ecs": "ecs check --no-progress-bar",
        "ecs-fix": "ecs check --no-progress-bar --fix",
        "lint": "parallel-lint src/ stubs/ ecs.php",
        "eclint": "eclint check src/ stubs/ ecs.php",
        "eclint-fix": "eclint fix src/ stubs/ ecs.php",
        "check": [
            "@composer update",
            "@analyze",
            "@ecs",
            "@lint",
            "@eclint"
        ]
    }
}
