{
    "name": "decodelabs/terminus",
    "description": "Simple CLI interactions",
    "type": "library",
    "keywords": ["cli", "terminal"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",

        "decodelabs/coercion": "^0.2",
        "decodelabs/deliverance": "^0.1|^0.2-dev",
        "decodelabs/exceptional": "^0.4",
        "decodelabs/glitch-support": "^0.4",
        "decodelabs/systemic": "^0.8",
        "decodelabs/veneer": "^0.8|^0.9-dev",

        "psr/log": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6",
        "decodelabs/atlas": "^0.9"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Terminus\\": "src/Terminus"
        },
        "files": [
            "src/global.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.8.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
